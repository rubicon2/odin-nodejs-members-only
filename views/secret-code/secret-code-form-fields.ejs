<div id="secret-code-section">
  <div class="flex space-between">
    <label for="secret_code">Secret code: </label>
    <!-- If server responds with error for this field, show invalid input styling -->
    <input type="password" name="secret_code" id="secret_code" required value="<%= locals?.formData?.secret_code ? formData.secret_code : '' %>" class="<%= locals?.errors?.secret_code ? 'invalid' : '' %>">
  </div>
  <%- include('../partials/form-error.ejs', { message: locals?.errors?.secret_code ? errors.secret_code : '' }) %>
</div>