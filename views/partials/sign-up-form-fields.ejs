<label for="email">Email: </label>
<input type="email" name="email" id="email" value="<%= email != null ? email : '' %>">
<label for="first_name">First name: </label>
<input type="text" name="first_name" id="first_name" value="<%= first_name != null ? first_name : '' %>">
<label for="last_name">Last name: </label>
<input type="text" name="last_name" id="last_name" value="<%= last_name != null ? last_name : '' %>">
<label for="password">Password: </label>
<input type="password" name="password" id="password" value="<%= password != null ? password : '' %>">
<label for="confirm_password">Confirm password: </label>
<input type="password" name="confirm_password" id="confirm_password" value="<%= confirm_password != null ? confirm_password : '' %>">
